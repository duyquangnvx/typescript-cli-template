{
    "name": "@duyquangnvx/typescript-cli-template",
    "version": "0.1.0",
    "description": "A production-ready TypeScript CLI template with Commander.js, Vitest, ESLint, and Prettier",
    "type": "module",
    "bin": {
        "typescript-cli-template": "dist/index.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "commander": "^13.1.0",
        "@commander-js/extra-typings": "^13.1.0"
    },
    "devDependencies": {
        "typescript": "^5.7.3",
        "@types/node": "^22.13.4",
        "vitest": "^3.0.6",
        "@vitest/coverage-v8": "^3.0.6",
        "eslint": "^9.20.0",
        "@eslint/js": "^9.20.0",
        "typescript-eslint": "^8.24.1",
        "eslint-config-prettier": "^10.0.1",
        "prettier": "^3.5.2"
    }
}
